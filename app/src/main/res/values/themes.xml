<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ClockClone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#81D3F9</item>
        <item name="colorPrimaryVariant">#B5FFFF</item>
        <item name="colorPrimaryDark">#4BA2C6</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#81D4FA</item>
        <item name="colorSecondaryVariant">#B6FFFF</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionBarStyle">@style/ActionBarTheme</item>
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
        <item name="toolbarStyle">@style/ActionBarTheme</item>
        <item name="android:toolbarStyle">@style/ActionBarTheme</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.ClockClone.Fullscreen" parent="Theme.ClockClone">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/samsung_clock_2016</item>
    </style>
    <style name="SpecialClockText" parent="Theme.ClockClone">
        <item name="fontFamily">@font/samsung_clock_2016</item>
    </style>
    <style name="ActionBarTheme" parent="Widget.MaterialComponents.Toolbar">
        <item name="background">@color/white</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>