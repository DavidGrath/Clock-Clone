<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ClockClone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="windowActionModeOverlay">true</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.ClockClone.Fullscreen" parent="Theme.ClockClone">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/samsung_clock_2016</item>
    </style>
    <style name="SpecialClockText" parent="Theme.ClockClone">
        <item name="fontFamily">@font/samsung_clock_2016</item>
    </style>
</resources>