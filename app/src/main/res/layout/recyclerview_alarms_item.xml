<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="8dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:animateLayoutChanges="true">
    <CheckBox
        android:id="@+id/checkbox_alarms_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
    <TextView
        android:id="@+id/textview_alarms_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SpecialClockText"
        tools:text="06:00"
        android:textSize="32sp"
        android:lines="1"
        android:layout_marginEnd="8dp"/>
        <TextView
            android:id="@+id/textview_alarms_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Name"
            android:visibility="gone"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textview_alarms_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Fri, 24 Sep"
        android:lines="1"
        android:textSize="18sp"
        android:layout_marginEnd="8dp"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/textview_alarms_week_dates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.2"
        tools:text="S M T W T F S"
        android:lines="1"
        android:textSize="18sp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"/>
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_alarms_on_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:visibility="visible"/>
</LinearLayout>