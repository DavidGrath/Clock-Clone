<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.TimeUpActivity"
    android:background="@color/black"
    android:theme="@style/Theme.ClockClone.Fullscreen">
    <LinearLayout
        android:id="@+id/linearlayout_timeup_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    <TextView
        android:id="@+id/textview_time_up_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time is up"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="54sp"
                android:text="-"
                android:layout_marginTop="16dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hours"/>
                <TextView
                    android:id="@+id/textview_time_up_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="54sp"
                    android:text="00"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="54sp"
                android:layout_marginTop="16dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minutes"/>
                <TextView
                    android:id="@+id/textview_time_up_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="54sp"
                    android:text="00"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="54sp"
                android:layout_marginTop="16dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seconds"/>
                <TextView
                    android:id="@+id/textview_time_up_seconds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="54sp"
                    android:text="03"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/imageview_cancel_time_up"
        android:src="@drawable/ic_baseline_close_24"
        app:tint="@color/white"
        android:padding="8dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/simple_circle"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/linearlayout_timeup_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="15dp"/>
    <ImageView
        android:visibility="gone"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/simple_circle"
        android:alpha="0.5"
        android:padding="80dp"
        app:layout_constraintEnd_toEndOf="@id/imageview_cancel_time_up"
        app:layout_constraintStart_toStartOf="@id/imageview_cancel_time_up"
        app:layout_constraintTop_toTopOf="@id/imageview_cancel_time_up"
        app:layout_constraintBottom_toBottomOf="@id/imageview_cancel_time_up" />
    <ImageView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_chevron_left_24"
        app:tint="#F00"
        app:layout_constraintEnd_toStartOf="@id/imageview_cancel_time_up"
        app:layout_constraintTop_toTopOf="@id/imageview_cancel_time_up"
        app:layout_constraintBottom_toBottomOf="@id/imageview_cancel_time_up"
        android:layout_marginEnd="24dp"
        />
    <ImageView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_chevron_right_24"
        app:tint="#F00"
        app:layout_constraintStart_toEndOf="@id/imageview_cancel_time_up"
        app:layout_constraintTop_toTopOf="@id/imageview_cancel_time_up"
        app:layout_constraintBottom_toBottomOf="@id/imageview_cancel_time_up"
        android:layout_marginStart="24dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>