<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.SelectWorldClockCityActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarlayout_select_world_clock_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_select_world_clock_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:gravity="center"
            android:orientation="horizontal">
            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchview_select_world_clock_cities"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:queryHint="Search"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/imageview_select_world_clock_location"
                app:tint="?attr/colorSecondary"
                android:src="@drawable/ic_baseline_gps_fixed_24"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                />
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_world_clock_select_item"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/appbarlayout_select_world_clock_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>